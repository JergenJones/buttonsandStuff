ctr(".menuBar",{
  // edit: true
  background-color: $light
  width: 100%
  height: 50px
  display: flex
  flex-flow: row wrap
  justify-content: space-between
  align-items: center
  comp: {
    ".logo": {
      margin-left: 1em
      width: 125px
        hover: {
          on: {
            transform: scale(1.1)
            anim: {
              preset: pulse
              option: {
                count: infinite
              }
            }
          }
          non: {
            transform: scale(1)
          }
        }
      comp: {
        a: {
          font-size: 1.5em
          font-weight: 600
          font-family: sans-serif
          text-decoration: none
          float: left
          padding: .4em
          hover: {
            option: {
              attachTo: '.logo'
            }
            on: {
              color: $green2
            }
            non: {
              color: $purp2
            }
          }
        }
        '.span': {
          comp: {
            a: {
              font-weight: 600
              transform: rotate(90deg)
              transform-origin: left top 0
              float: right
              padding-left: 5px
              text-decoration: none
              hover: {
                option: {
                  attachTo: '.logo'
                }
                on: {
                  color: $purp2
                }
                non: {
                  color: $banana
                }
              }
            }
          }
        }
      }
    }
    ul: {
      width: 50%
      display: flex
      flex-flow: row nowrap
      justify-content: space-around
      comp: {
        li: {
          list-style-type: none
          hover: {
            on: {
              transform: scale(1.1)
            }
            non: {
              transform: scale(1)
            }
          }
          comp: {
            a: {
              text-decoration: none
              padding: 1em
              margin-right: 2em
              font-family: sans-serif
              font-weight: 600
              hover: {
                on: {
                  color: $purp
                }
                non: {
                  color: $green2
                }
              }
            }
            '.active': {
              hover: {
                on: {
                  background-color: default
                }
                non: {
                  background-color: $darker
                } 
              }
            }
          }
        }
      }
    }
  }
})